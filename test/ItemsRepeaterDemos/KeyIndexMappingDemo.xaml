<local:NavPage
    x:Class="ItemsRepeaterDemos.KeyIndexMappingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ItemsRepeaterDemos"
    xmlns:mux="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Sort Asc" Click="OnSortAscClick" />
            <Button Content="Sort Desc" Click="OnSortDesClick" />
            <TextBlock Text="Filter :" />
            <TextBox x:Name="filterText" PlaceholderText="Filter Text" TextChanged="filterText_TextChanged"></TextBox>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <mux:ItemsRepeater x:Name="repeater">
                <mux:ItemsRepeater.Animator>
                    <local:DefaultElementAnimator />
                </mux:ItemsRepeater.Animator>
                <DataTemplate>
                    <ListViewItem Content="{Binding FullName}" />
                </DataTemplate>
            </mux:ItemsRepeater>
        </ScrollViewer>
    </Grid>
</local:NavPage>
