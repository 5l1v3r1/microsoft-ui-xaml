<local:NavPage
    x:Class="ItemsRepeaterDemos.MaintainViewportDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ItemsRepeaterDemos"
    xmlns:mux="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <StackPanel>
            <TextBlock>Index:</TextBlock>
            <TextBox x:Name="indexTextBox" Text="0" />
            <Button Click="Button_Click">Insert Item</Button>
            
            <ScrollViewer Width="600" Height="800" HorizontalAnchorRatio="0.0" VerticalAnchorRatio="0.0">
                <mux:ItemsRepeater x:Name="repeater">
                </mux:ItemsRepeater>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</local:NavPage>
