<Page
    x:Class="ItemsRepeaterDemos.GroupingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mux="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer Margin="20">
            <!-- Outer Repeater (Groups) -->
            <mux:ItemsRepeater x:Name="repeater">
                <DataTemplate>  <!-- One for each Type -->
                    <StackPanel Margin="10, 0">
                        <!-- Group Header -->
                        <TextBlock Text="{Binding FullName}" FontSize="20"/>
                        <!-- Inner Repeater (Group Items) -->
                        <mux:ItemsRepeater 
                            ItemsSource="{Binding DeclaredMembers}" >
                        </mux:ItemsRepeater>
                        <!-- Group Footer -->
                        <TextBlock Text="Footer!" Foreground="Gray" />
                    </StackPanel>
                </DataTemplate>
            </mux:ItemsRepeater>
        </ScrollViewer>
    </Grid>
</Page>
























