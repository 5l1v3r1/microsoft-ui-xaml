<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Microsoft.UI.Xaml.Controls">

    <Style TargetType="local:NumberBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NumberBox">
                    <RelativePanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ValidationStates" >
                                <VisualState x:Name="Invalid">
                                    <VisualState.Setters>
                                        <!-- TODO: Export Color to ThemeResource -->
                                        <Setter Target="InputBox.BorderBrush" Value="#C50500" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Valid" />

                                <VisualState x:Name="InvalidIcon">
                                    <VisualState.Setters>
                                        <!-- TODO: Export Color to ThemeResource -->
                                        <Setter Target="InputBox.BorderBrush" Value="#C50500"/>
                                        <Setter Target="ValidationIcon.Visibility" Value="Visible" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="InvalidText">
                                    <VisualState.Setters>
                                        <!-- TODO: Export Color to ThemeResource -->
                                        <Setter Target="InputBox.BorderBrush" Value="#C50500" />
                                        <Setter Target="ErrorTextMessage.Visibility" Value="Visible" />
                                    </VisualState.Setters>
                                </VisualState>

                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SpinButtonStates">
                                <VisualState x:Name="SpinButtonsVisible">
                                    <VisualState.Setters>
                                        <Setter Target="DownSpinButton.Visibility" Value="Visible" />
                                        <Setter Target="UpSpinButton.Visibility" Value="Visible" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="SpinButtonsCollapsed" >
                                    <VisualState.Setters>
                                        <Setter Target="DownSpinButton.Visibility" Value="Collapsed" />
                                        <Setter Target="UpSpinButton.Visibility" Value="Collapsed" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel Orientation="Horizontal" Name="panel">
                            <TextBox x:Name="InputBox" Header=""/>
                            <!-- TODO: Export Border Thickness to ThemeResource -->
                            <RepeatButton x:Name="DownSpinButton"
                                Visibility="Collapsed"
                                AutomationProperties.AccessibilityView="Raw"
                                BorderThickness="0 2 2 2"  FontSize="{TemplateBinding FontSize}"
                                IsTabStop="False" MinWidth="34" Margin="{ThemeResource HelperButtonThemePadding}"
                                VerticalAlignment="Stretch" Background="{ThemeResource TextControlBackground}"
                                BorderBrush="{ThemeResource TextControlBorderBrush}" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Content="&#xE70D;" />
                            <RepeatButton x:Name="UpSpinButton"
                                Visibility="Collapsed"
                                BorderThickness="0 2 2 2"
                                FontSize="{TemplateBinding FontSize}"
                                IsTabStop="False"
                                MinWidth="34"
                                Margin="{ThemeResource HelperButtonThemePadding}"
                                VerticalAlignment="Stretch"
                                Background="{ThemeResource TextControlBackground}"
                                BorderBrush="{ThemeResource TextControlBorderBrush}"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Content="&#xE70E;" />
                            <!-- TODO: Export Color to ThemeResource -->
                            <FontIcon x:Name="ValidationIcon" FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE7BA;" Foreground="#C50500" Margin="10,0,0,0" Visibility="Collapsed" ToolTipService.ToolTip="Invalid Input" />
                        </StackPanel>
                        <TextBlock Visibility="Collapsed" x:Name="ErrorTextMessage" Foreground="#C50500" IsColorFontEnabled="True" Text="Invalid Value" RelativePanel.Below="panel" />
                    </RelativePanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
